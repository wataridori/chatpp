{
    "name": "Chat++",
    "short_name": "ChatPP",
    "version": "0.1.3",
    "manifest_version": 2,
    "description": "A Chatwork Enhancement Toolkit",
    "content_scripts": [
        {
            "matches": [
                "https://www.chatwork.com/*",
                "https://kcw.kddi.ne.jp/*"
            ],
            "js": [
                "js/jquery-2.1.1.min.js",
                "js/contentscript.js",
                "js/emo.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": ["js/emo.js", "js/mention.js", "js/fuse.min.js", "js/caretposition.js"],
    "browser_action": {
        "default_icon": "icon64.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "<all_urls>"
    ],
    "options_page": "option.html",
    "icons": {
        "64": "icon64.png"
    },
    "homepage_url": "http://chatpp.thangtd.com"
}
